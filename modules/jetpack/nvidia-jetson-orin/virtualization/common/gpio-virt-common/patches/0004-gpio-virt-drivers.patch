+    break;
+    case GPIO_TIMESTAMP_CTRL:
+      chip = find_chip_by_id(kbuf->chipnum);
+      deb_verbose("GPIO_TIMESTAMP_CTRL\n");
+      ret = chip->timestamp_control(chip, kbuf->offset, kbuf->level);	// mapping level onto enable
