+    kfree(kbuf);
+    return -ENOMEM;
+  }
+  deb_verbose("kbuf is set up, kbuf=%p", kbuf);
+
+  if( len == (sizeof(struct tegra_gpio_pt) + sizeof(tegra_gpio_pt_extended) ) ) {
+    kbuf_ext = (tegra_gpio_pt_extended *)(kbuf + 1);
+    deb_verbose("kbuf_ext is set up kbuf_ext=%p", kbuf_ext);
